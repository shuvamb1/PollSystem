<!DOCTYPE html>
<html>
<head>
  <title><%= poll.question %></title>
  <link rel="stylesheet" href="/styles.css">
<style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f6f8;
      margin: 0;
      padding: 0;
      color: #333;
    }
    h1, h3 {
      text-align: center;
      margin: 10px 0;
    }
    .container {
      max-width: 800px;
      margin: auto;
      background: #fff;
      padding: 20px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      border-radius: 10px;
      margin-top: 30px;
    }
    form {
      margin-top: 20px;
    }
    form div {
      padding: 10px;
      background: #f9f9f9;
      border-radius: 6px;
      margin-bottom: 10px;
      transition: background 0.3s ease;
    }
    form div:hover {
      background: #eef3f7;
    }
    label {
      margin-left: 8px;
      font-size: 1rem;
    }
    button {
      background: #007bff;
      color: white;
      padding: 10px 15px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
      display: block;
      margin: 15px auto;
      transition: background 0.3s ease;
    }
    button:hover {
      background: #0056b3;
    }
    canvas {
      display: block;
      max-width: 100%;
      margin: 20px auto;
    }

    /* ðŸ“± Mobile Responsive */
    @media (max-width: 600px) {
      .container {
        margin: 15px;
        padding: 15px;
      }
      h1 {
        font-size: 1.5rem;
      }
      label {
        font-size: 0.95rem;
      }
      button {
        width: 100%;
        font-size: 1rem;
        padding: 12px;
      }
    }
  </style>
</head>
<body>
  <h1><%= poll.question %></h1>
  <h3>Total Votes: <span id="totalVotes"><%= poll.votes.reduce((a,b) => a+b, 0) %></span></h3>

  <form action="/vote/<%= poll.id %>" method="POST">
    <% poll.options.forEach((option, index) => { %>
      <div>
        <input type="radio" name="option" value="<%= index %>" required>
        <label><%= option %></label>
      </div>
    <% }) %>
    <button type="submit">Vote</button>
  </form>

  <canvas id="resultsChart"></canvas>

  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    const socket = io();
    socket.emit("joinPoll", "<%= poll.id %>");

  const ctx = document.getElementById('resultsChart').getContext('2d');
  const chart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: <%- JSON.stringify(poll.options) %>,
      datasets: [{
        label: 'Votes',
        data: <%- JSON.stringify(poll.votes) %>,
        backgroundColor: 'rgba(75, 192, 192, 0.6)'
      }]
    }
  });


    socket.on("voteUpdate", (data) => {
      chart.data.datasets[0].data = data.votes;
      chart.update();
      document.getElementById("totalVotes").innerText = data.totalVotes;
    });
  </script>
</body>
</html>


